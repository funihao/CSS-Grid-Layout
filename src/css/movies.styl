@import "lib/_variables.styl"
// @import "lib/_mixins.styl"


body
  background-color fondo
  font-family base-font-family
  font-size 14px
  margin 0
  min-height 100vh

h2
p
  margin 0

.container
  align-content  space-evenly
  display grid
  grid-column-gap 35px
  grid-template-columns 100px 1fr 1fr 1fr
  grid-template-rows 80px 1fr
  height 100vh
  justify-content  center


.header
  align-items center
  box-shadow 0 2px 5px 0 rgba(0,0,0,0.16), 0 2px 10px 0 rgba(0,0,0,0.12)
  display flex
  grid-column 1 / -1
  justify-content space-evenly
  padding 10px
  z-index 10


.brand-logo
  align-items center
  color white
  display flex
  font-size 3em
  justify-items center
  text-shadow 1px 0px #ff6b69,
              -1px 0px #ff6b69,
              0px 1px #ff6b69,
              0px -1px #ff6b69

  &__img
    height 60px

  &__text
    margin 0


.search
  margin 0 40px
  width 50%

  &-input
    border 1px solid #ccc
    border-radius 10px
    box-sizing border-box
    margin 5px
    padding 10px
    width 100%

    &:focus
      border 2px solid #ff6b69
      outline none


.side-bar
  background #ff6b69
  color white
  display flex
  flex-direction column
  font-size 1.2em
  grid-column 1 / 2
  grid-row 2 / -1
  justify-content space-between
  text-align center
  transition all 1s ease

  & p.icon
    margin-top 30px

.bar
  background #ff6b69
  color white
  cursor pointer
  display none
  font-size 1.5em
  font-weight bold
  height 30px
  left 0px
  position absolute
  transition all .2s ease
  width 30px
  z-index 1

a
  &:link
    color inherit
    text-decoration none

  &.user
    align-items center
    display flex


.user
  &__img
    margin 0px 5px 0px 10px

    & img
      border-radius 50%
      height 50px

  &__arrow
    border-color #000 transparent transparent transparent
    border-style solid
    border-width 10px 5px


.post
  background white
  display grid
  grid-column 2 / -1
  grid-column-gap 35px
  grid-row 2 / -1
  grid-template-columns  1fr 1fr 1fr
  grid-template-rows 60px 1fr 60px 1fr 60px 1fr
  overflow auto


  &-section
    background white
    font-size 1.5em
    grid-column 1 / -1
    margin-top 20px
    position relative


  &-item
    display flex
    overflow hidden
    position relative

    &:hover .post-overlay
      top 0

  &-image
    margin 0

    & img
      height 100%
      object-fit cover
      width 100%

  &-overlay
    background rgba(252, 107, 104,.4)
    bottom 0
    color white
    margin 0
    overflow hidden
    position absolute
    top 55%
    transition all .3s ease

  & h2
  & p
    padding 10px 5px 0px 5px



.burger
  cursor pointer
  display none
  margin 0 20px 0 0
  min-height 25px
  min-width 25px

  &-inner
  &-inner:after
  &-inner:before
    background-color rgba(252, 107, 104,1)
    border-radius 5px
    content ''
    height 4px
    position absolute
    transition all .2s ease
    width 40px

  &-inner:before
    top 10px

  &-inner:after
    top 20px


  &.open &-inner
    transform translate3d(0,10px,0) rotate(45deg)

  &.open &-inner:after
    transform translate3d(0,-20px,0) rotate(45deg)
    opacity 0

  &.open &-inner:before
    transform translate3d(0,-10px,0) rotate(90deg)


@media screen and (max-width: 960px)
  .bar
    display block

  .container
    grid-template-columns 100px 1fr

  .brand-logo
    display block
    font-size 1.8em
    text-align center

    &__img
      height 45px

  .search
    margin 0 12px 0 3px
    width 75%

  a.user
    background white
    box-shadow 0 2px 5px 0 rgba(0,0,0,0.16), 0 2px 10px 0 rgba(0,0,0,0.12)
    display none
    height 0
    justify-content center
    position absolute
    right 1px
    top 75px
    transition all 2.5s ease
    width 200px

    &.view
      display flex
      height 100px
      opacity 1

  .burger
    display block

  .post
    display unset
    grid-column 1 / -1

    &-item
      margin 5px 30px 20px
