body
  background-color fondo
  font-family base-font-family
  font-size 14px
  margin 0
  // font-weight 200
  // justify-content center
  min-height 100vh

p
  margin 0

.container
  display grid
  // grid-row-gap 5px
  grid-column-gap 30px
  grid-template-columns 100px 1fr auto
  grid-template-rows 80px 1fr
  height 100vh

  // justify-content  center // start|end|center|strech|space-around|space-between|space-evenly
  // align-content  space-evenly // start|end|center|strech|space-around|space-between|space-evenly


