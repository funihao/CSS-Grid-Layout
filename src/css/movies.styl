.header
  align-items center
  background white
  box-shadow 0 2px 5px 0 rgba(0,0,0,0.16), 0 2px 10px 0 rgba(0,0,0,0.12)
  display flex
  grid-column 1 / -1
  justify-content space-between
  padding 10px


.brand-logo
  align-items center
  color white
  display flex
  font-size 3em
  justify-items center
  text-shadow 1px 0px #ff6b69,
              -1px 0px #ff6b69,
              0px 1px #ff6b69,
              0px -1px #ff6b69

  &__img
    height 60px

  &__text
    margin 0


.search
  width 50%

  &-input
    border 1px solid #ccc
    border-radius 10px
    box-sizing border-box
    padding 10px
    width 100%


a
  &:link
    color inherit
    text-decoration none

  &.user
    align-items center
    display flex


.user
  &__img
    margin 0px 5px 0px 10px

    & img
      border-radius 50%
      height 50px

  &__arrow
    border-color #000 transparent transparent transparent
    border-style solid
    border-width 10px 5px


.side-bar
  background lightcoral
  color white
  display flex
  flex-direction column
  font-size 1.2em
  grid-column 1 / 2
  justify-content space-between
  text-align center

  // grid-row 2 /-1
  // height 100vh

// .home
//   & p
//     margin-bottom 0

p.icon
  margin-top 30px


.post
  background white
  margin-top 20px

  &-group
    align-items center
    font-size 1.5em
    grid-column 1 / -1
    margin-top 5px


  &-list
    display grid
    // grid-auto-flow row
    grid-column 1 / -1
    grid-column-gap 30px
    grid-row-gap 15px
    grid-template-columns 1fr 1fr 1fr
    grid-template-rows 30px 1fr 30px 1fr 30px 1fr
    height calc(100vh - 100px)
    // margin-top 10px


  &-image
    margin 0

    & img
      vertical-align top
      width 100%

  &-item
    background #ff6b6955
    display block
    position relative

    &:hover .post-overlay
      top 0

  &-overlay
    // align-items center
    background rgba(252, 107, 104,.4)
    bottom 0
    color white
    display flex
    flex-direction column
    left 0
    overflow hidden
    position absolute
    right 0
    top 70%
    transition .3s

    & h2
    & p
      margin 0
      padding 10px 5px 0px 5px
