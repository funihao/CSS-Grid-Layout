@import "lib/_variables.styl"
// @import "lib/_mixins.styl"


body
  background-color fondo
  font-family base-font-family
  font-size 20px
  // justify-content center
  margin 0
  min-height 100vh


.container
  display grid
  grid-column-gap 10px
  grid-row-gap 10px
  grid-template 100px 1fr 150px / 200px 1fr
  grid-template-areas "header header" "left content" "footer footer"
  height 100vh


.item
  background lightblue
  border 1px solid red
  // margin-right 20px
  padding 10px

  &:nth-of-type(4)
    background lightcoral
    // display subgrid repite el grid padre (aún no estásoportado)
    display grid
    grid-template 50px 50px / 25% 50% 25%
    overflow auto // Esto añade un scroll si el elemento lo necesita

  & .item
    background lavender


.header
  grid-area header

.left
  grid-area left


.content
  grid-area content


.footer
  grid-area footer
