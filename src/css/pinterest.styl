@css {
  .container {
    grid-template-columns: repeat(auto-fill, 250px);
  }
}


.container
  display Grid
  grid-gap 5px
  justify-content center


.item
  background #f2f2f2
  border-radius 5px
  padding 10px

  & img
    max-width 100%


.level-1
  grid-row-end span 3

.level-2
  grid-row-end span 2

.level-3
  grid-row-end span 1
